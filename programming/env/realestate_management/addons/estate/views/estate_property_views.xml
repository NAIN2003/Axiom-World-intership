<odoo>
    <data>
        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Properties/My new house">
                    <sheet>
                            <group>

                                <field name="property_type_id"/>
                            </group>
                        <!-- First Group -->
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                            </group>
                            <group>
                                <field name="postcode" string="Postcode"/>
                                <field name="expected_price" string="Expected Price"/>
                                <field name="data_availability" string="Available From"/>
                                <field name="selling_price" readonly="1"/>
                            </group>
                        </group>

                        <!-- Second Group -->
                        <group>
                            <field name="description" placeholder="Description" nolabel="1"/>
                        </group>

                        <!-- Third Group -->
                        <group>
                            <field name="bedrooms" string="Bedrooms"/>
                            <field name="living_area" string="Living Area (sqm)"/>
                            <field name="facades" string="Facades"/>
                            <field name="garage" widget="radio"/>
                            <field name="garden" widget="radio"/>
                            <field name="garden_area" string="Garden Area (sqm)"/>
                            <field name="garden_orientation" string="Garden Orientation"/>
                        </group>
                        <search >
                            <filter string="Available Properties" domain="[('state', 'in', ['New', 'Offer Received'])]"/>
                    <group expand="0" string="Group By">
                        <filter string="Postcode" context="{'group_by': 'postcode'}"/>
                    <field name="name" string="Search Title for:"/>
                    <field name="postcode" string="Search Postcode for:"/>
                    <field name="expected_price" string="Search Expected Price for:"/>
                    <field name="living_area" string="Search Living Area for:"/>
                    <field name="bedrooms" string="Search Bedrooms for:"/>
                    <field name="facades" string="Search Facades for:"/>
                </search>
                         <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        group>
                            <field name="offer_ids" mode="tree" string="Offers">
                                <tree editable="bottom">
                                    <field name="price"/>
                                    <field name="status"/>
                                    <field name="partner_id"/>
                                </tree>
                            </field>
                        </group>
                          <field name="tag_ids" widget="many2many_tags"/>
                        <page string="Buyer & Salesperson">
                                <group>
                                    <field name="buyer_id"/>
                                    <field name="salesperson_id"/>
                                </group>
                            </page>
                     <group>
                            <field name="living_area"/>
                            <field name="garden_area"/>
                            <field name="total_area" readonly="1"/>
                        </group>


                        <notebook>
                            <page string="Offers">
                                <field name="offer_ids" mode="kanban">
                                    <tree>

                                    </tree>
                                </field>
                            </page>
                        </notebook>

                        <group>

                            <field name="highest_offer" readonly="1"/>
                        </group>
                     <group>

                            <field name="validity"/>
                            <field name="date_deadline"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
